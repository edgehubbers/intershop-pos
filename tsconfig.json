{
  "compilerOptions": {
    /* ğŸ’» ConfiguraciÃ³n base moderna */
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",

    /* âš™ï¸ Control estricto y robusto */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ğŸ” Paths y tipado */
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },

    /* ğŸ§± Soporte de import/export moderno */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,

    /* ğŸ“š LibrerÃ­as del navegador y Node */
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["node", "vite/client"]
  },

  /* ğŸ§© QuÃ© archivos debe analizar TypeScript */
  "include": [
    "app",
    "server.ts",
    "vite.config.ts"
  ],

  /* ğŸš« QuÃ© debe ignorar (evita conflictos en macOS) */
  "exclude": [
    "node_modules",
    ".react-router",
    "build",
    "dist"
  ]
}
